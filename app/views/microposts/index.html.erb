<p id="notice"><%= notice %></p>

<h1>Microposts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @microposts.each do |micropost| %>
      <tr>
        <td><%= micropost.content %></td>
        <td> <%= micropost.user.login %></td>
        <td> <%= image_tag micropost.image.url(:thumb, class: "img-thumbnail")%></td>
        <td><%= link_to 'Show', micropost %></td>
        <% if can? :update, micropost %>
            <td><%= link_to 'Edit', edit_micropost_path(micropost) %></td>
        <% end %>
        <% if can? :destroy, micropost %>
         <td><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
         <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Micropost', new_micropost_path %>
